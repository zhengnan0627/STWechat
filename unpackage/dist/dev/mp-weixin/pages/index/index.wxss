.swiper {
	width: 100vw;
	height: 360rpx;
	border-top: 5px solid #D5D5D5;
}
.swiper .swiper-item {
	width: 100vw;
	height: 100%;
}
.swiper .swiper-item image {
	width: 100%;
	height: 100%;
}
.module-title {
	height: 80rpx;
	line-height: 80rpx;
	font-size: 28rpx;
	font-weight: 600;
	padding-left: 20rpx;
	background-color: #FFFFFF;
	border-bottom: 1px solid #D5D5D5;
	border-top: 5px solid #D5D5D5;
}
.grid-image{
	width: 160rpx !important;
	height: 160rpx !important;
	padding: 10rpx 10rpx;
}
.grid-text {
	font-size: 28rpx;
	margin-top: 4rpx;
	color: $u-type-info;
}

